 <body>
     <p>
         <?php
        
         // 四則演算（整数型のみ）
         echo 45 + 18;
         echo '<br>';
         echo 30 - 12;
         echo '<br>';
         echo 15 * 6;
         echo '<br>';
         echo 30 / 3;
         echo '<br>';
         echo 45 % 8;
         ?>
     </p>
     <p>
        <?php

        //変数に値を代入する
        $score1 = 80;
        $score2 = 60;
        $score3 = 55;
        $score4 = 40;
        $score5 = 100;
        $score6 = 25;
        $score7 = 80;
        $score8 = 95;
        $score9 = 30;
        $score10 = 60;

        //すべての変数を合計する
        echo $score1 + $score2 + $score3 + $score4 + $score5 + $score6 + $score7 + $score8 + $score9 + $score10;

        //全ての変数の平均値
        echo ($score1 + $score2 + $score3 + $score4 + $score5 + $score6 + $score7 + $score8 + $score9 + $score10)/10;
        
        ?>
 </body>
 
